generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Int
  description String
  category    String
  image       String?  @db.Text  // ðŸ‘ˆ Ye '@db.Text' lazmi add karein
}